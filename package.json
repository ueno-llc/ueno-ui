{
  "name": "ueno-ui",
  "version": "1.3.7",
  "description": "Ueno. UI Components",
  "main": "commonjs/index.js",
  "files": [
    "*.js",
    "*.md",
    "styles.css",
    "umd",
    "commonjs",
    "src"
  ],
  "repository": "git@github.com:ueno-llc/ueno-ui.git",
  "author": "Birkir Gudjonsson <birkir.gudjonsson@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "ui components"
  ],
  "scripts": {
    "build": "yarn clear && babel-node ./tools/scripts/build.js",
    "check": "yarn run test",
    "clear": "rimraf ./commonjs && rimraf ./umd && rimraf ./coverage && rimraf ./styles.css",
    "eslint": "eslint src",
    "stylelint": "stylelint \"src/**/*.scss\" --syntax scss",
    "lint": "npm run eslint -q; npm run stylelint -q",
    "precommit": "npm run test",
    "prepublish": "NODE_ENV=production yarn run build",
    "test": "jest",
    "test:coverage": "yarn run test -- --coverage",
    "test:coverage:deploy": "yarn run test:coverage && codecov",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(css|scss|sass)$": "identity-obj-proxy",
      "\\.(je?pg|png|gif|ico|otf|ttf|eot|woff|woff2|svg)$": "<rootDir>/tools/jest/assetMock.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/(commonjs|coverage|flow-typed|node_modules|tools|umd)/"
    ],
    "setupFiles": [
      "<rootDir>/tools/jest/rafShim.js",
      "<rootDir>/src/setupTests.js"
    ]
  },
  "devDependencies": {
    "@storybook/react": "3.2.17",
    "@ueno/eslint-config": "1.2.7",
    "@ueno/stylelint-config": "1.0.4",
    "app-root-dir": "1.0.2",
    "babel-cli": "6.24.0",
    "babel-core": "6.24.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "19.0.0",
    "babel-loader": "6.4.1",
    "babel-plugin-css-modules-transform": "1.2.7",
    "babel-polyfill": "6.23.0",
    "babel-preset-env": "1.2.2",
    "babel-preset-latest": "6.24.0",
    "babel-preset-react": "6.23.0",
    "babel-preset-stage-1": "6.22.0",
    "babel-register": "6.24.0",
    "classnames": "2.2.5",
    "codecov": "2.1.0",
    "cross-env": "3.2.4",
    "css-loader": "0.28.0",
    "enzyme": "3.0.0",
    "enzyme-adapter-react-16": "1.1.0",
    "eslint": "4.9.0",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "gzip-size": "3.0.0",
    "husky": "0.13.3",
    "identity-obj-proxy": "3.0.0",
    "in-publish": "2.0.0",
    "jest": "19.0.2",
    "node-sass": "4.5.2",
    "postcss-csso": "2.0.0",
    "pretty-bytes": "4.0.2",
    "ramda": "0.23.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "readline-sync": "1.4.7",
    "rimraf": "2.6.1",
    "sass-loader": "6.0.3",
    "style-loader": "0.16.1",
    "stylelint": "8.2.0",
    "url-loader": "0.5.8",
    "webpack": "2.3.2",
    "webpack-dev-middleware": "1.10.1",
    "webpack-hot-middleware": "2.17.1"
  },
  "dependencies": {
    "css-modules-require-hook": "4.0.6",
    "gsap": "1.20.3",
    "prop-types": "15.6.0",
    "react-router-dom": "4.2.2",
    "react-transition-group": "1.1.3",
    "react-waypoint": "7.3.2",
    "three": "0.87.1"
  }
}
